<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.secuso.privacyfriendlymemory.ui">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".navigation.AboutActivity" />
        <activity android:name=".navigation.HelpActivity" />
        <activity android:name=".navigation.HighscoreActivity" />
        <activity android:name=".navigation.StatisticsActivity" />
        <activity android:name=".navigation.DeckChoiceActivity" />
        <activity android:name=".MemoryActivity"
                  android:label="@string/app_name"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:configChanges="orientation|screenSize">
                 <!-- android:screenOrientation="portrait"> -->
        </activity>
    </application>

</manifest>